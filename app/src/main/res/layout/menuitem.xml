<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_item_layout"
    android:background="#ffffff"
    android:orientation="vertical">
    <View
        android:id="@+id/divide_line_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="49.5dp"
        android:background="#e6ebf0"
        android:visibility="gone" />

    <View
        android:id="@+id/divide_area_view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#e6ebf0"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/menu_item_image"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/menu_item_titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#b3bc70"
            tools:text="文字"/>

    </LinearLayout>

</LinearLayout>
